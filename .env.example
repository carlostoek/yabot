# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Webhook Configuration (leave empty to use polling mode)
WEBHOOK_URL=https://yourdomain.com/webhook
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_CERTIFICATE_PATH=/path/to/certificate.pem
WEBHOOK_IP_ADDRESS=
WEBHOOK_MAX_CONNECTIONS=40

# Polling Configuration (used when WEBHOOK_URL is empty)
POLLING_ENABLED=True
POLLING_TIMEOUT=30
POLLING_LIMIT=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/bot.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Bot Configuration
BOT_MAX_CONNECTIONS=100
BOT_REQUEST_TIMEOUT=30

# Security Configuration
ALLOWED_UPDATES=message,callback_query,inline_query